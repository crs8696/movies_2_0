<% was_validated = user.errors.any? %>

<%= form_with(model: user, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for name start -->
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = user.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <!-- Input for name start -->
    <%= f.number_field :name, class: name_class, placeholder: "Enter name" %>
    <!-- Input for name end -->
    <% if name_was_invalid %>
      <% user.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for name end -->
  <!-- Label and input for password start -->
  <div class="form-group">
    <% password_class = "form-control" %>
    <% password_was_invalid = user.errors.include?(:password) %>

    <% if was_validated %>
      <% if password_was_invalid %>
        <% password_class << " is-invalid" %>
      <% else %>
        <% password_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :password %>
    <!-- Input for password start -->
    <%= f.text_field :password, class: password_class, placeholder: "Enter password" %>
    <!-- Input for password end -->
    <% if password_was_invalid %>
      <% user.errors.full_messages_for(:password).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for password end -->
  <!-- Label and input for log_in_time start -->
  <div class="form-group">
    <% log_in_time_class = "form-control" %>
    <% log_in_time_was_invalid = user.errors.include?(:log_in_time) %>

    <% if was_validated %>
      <% if log_in_time_was_invalid %>
        <% log_in_time_class << " is-invalid" %>
      <% else %>
        <% log_in_time_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :log_in_time %>
    <!-- Input for log_in_time start -->
    <%= f.datetime_select :log_in_time, class: log_in_time_class, placeholder: "Enter log in time" %>
    <!-- Input for log_in_time end -->
    <% if log_in_time_was_invalid %>
      <% user.errors.full_messages_for(:log_in_time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for log_in_time end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
