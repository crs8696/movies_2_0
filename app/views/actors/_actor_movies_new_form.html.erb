<!-- Form movie start -->
<%= form_with(model: @movie, local: true) do |f| %>
<!-- Form movie end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <%= f.label :title %>

    <!-- Input for title start -->
    <%= f.text_field :title, class: "form-control" %>
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for year start -->
  <div class="form-group">
    <%= f.label :year %>

    <!-- Input for year start -->
    <%= f.date_select :year, class: "form-control" %>
    <!-- Input for year end -->
  </div>
  <!-- Label and input for year end -->

  <!-- Label and input for duration start -->
  <div class="form-group">
    <%= f.label :duration %>

    <!-- Input for duration start -->
    <%= f.text_field :duration, class: "form-control" %>
    <!-- Input for duration end -->
  </div>
  <!-- Label and input for duration end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, rows: "3", class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for director_id start -->
  <div class="form-group">
    <%= f.label :director_id %>

    <!-- Input for director_id start -->
    <%= f.text_field :director_id, class: "form-control" %>
    <!-- Input for director_id end -->
  </div>
  <!-- Label and input for director_id end -->

  <!-- Label and input for details start -->
  <div class="form-group">
    <%= f.label :details %>

    <!-- Input for details start -->
    <%= f.text_field :details, class: "form-control" %>
    <!-- Input for details end -->
  </div>
  <!-- Label and input for details end -->

  <!-- Label and input for cast start -->
  <!-- Input for cast start -->
  <%= f.hidden_field :cast, value: @actor.id %>
  <!-- Input for cast end -->
  <!-- Label and input for cast end -->

  <%= f.submit "Create movie", class: "btn btn-block btn-outline-secondary" %>
<% end %>
