<%= search_form_for @q, :class => collapse_search_form, :id => "reviews_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :cast, "Cast" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :cast_gteq, :class => "form-control", :placeholder => "Cast greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :cast_lteq, :class => "form-control", :placeholder => "Cast less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :duration_cont, "Duration contains" %>
    <%= f.text_field :duration_cont, :class => "form-control", :placeholder => "Duration contains" %>
  </div>

  <div class="form-group">
    <%= f.label :year_cont, "Year contains" %>
    <%= f.text_field :year_cont, :class => "form-control", :placeholder => "Year contains" %>
  </div>

  <div class="form-group">
    <%= f.label :director_id, "Director" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :director_id_gteq, :class => "form-control", :placeholder => "Director greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :director_id_lteq, :class => "form-control", :placeholder => "Director less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :title, "Movie Title" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :movie_title_gteq, :class => "form-control", :placeholder => "Movie Title greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :movie_title_lteq, :class => "form-control", :placeholder => "Movie Title less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, "User Name" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :reviewer_name_gteq, :class => "form-control", :placeholder => "User Name greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :reviewer_name_lteq, :class => "form-control", :placeholder => "User Name less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Actor Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='cast_of_actorgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :cast_of_actor_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Actor Created at greater than or equal to", :data => {:target => '#cast_of_actorgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#cast_of_actorgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='cast_of_actorlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :cast_of_actor_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Actor Created at less than or equal to", :data => {:target => '#cast_of_actorlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#cast_of_actorlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#cast_of_actorgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#cast_of_actorlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#cast_of_actorgteqcreated_atPicker').on("dp.change", function (e) {
              $('#cast_of_actorlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#cast_of_actorlteqcreated_atPicker').on("dp.change", function (e) {
              $('#cast_of_actorgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :director_date_of_birth_cont, "Director date_of_birth contains" %>
    <%= f.text_field :director_date_of_birth_cont, :class => "form-control", :placeholder => "Director date_of_birth contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/reviews" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#reviews_filters">
  Show filters
</a>
