<div class="card mb-3">
  <h2 class="card-header h4">
    Review #<%= review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Movie</dt>
      <!-- Display movie_id start -->
      <dd>
        <% if @review.movie.present? %>
          <%= link_to review.movie, review.movie %>
        <% end %>
      </dd>
      <!-- Display movie_id end -->

      <dt>Director</dt>
      <!-- Display director_id start -->
      <dd><%= review.director_id %></dd>
      <!-- Display director_id end -->

      <dt>Year</dt>
      <!-- Display year start -->
      <dd><%= review.year %></dd>
      <!-- Display year end -->

      <dt>Duration</dt>
      <!-- Display duration start -->
      <dd><%= review.duration %></dd>
      <!-- Display duration end -->

      <dt>Review content</dt>
      <!-- Display review_content start -->
      <dd>
        <% if @review.reviewer.present? %>
          <%= link_to review.reviewer, review.reviewer %>
        <% end %>
      </dd>
      <!-- Display review_content end -->

      <dt>Cast</dt>
      <!-- Display cast start -->
      <dd><%= review.cast %></dd>
      <!-- Display cast end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link review start -->
      <div class="col">
        <%= link_to edit_review_url(review), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link review end -->

      <!-- Delete link review start -->
      <div class="col">
        <%= link_to review, method: :delete, data: { confirm: "Do you really want to delete this review?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link review end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(review.updated_at) %> ago
  </div>
</div>
