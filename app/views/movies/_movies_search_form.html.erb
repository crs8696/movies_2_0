<%= search_form_for @q, :class => collapse_search_form, :id => "movies_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :title, "Title" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :title_gteq, :class => "form-control", :placeholder => "Title greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :title_lteq, :class => "form-control", :placeholder => "Title less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :details, "Details" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :details_gteq, :class => "form-control", :placeholder => "Details greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :details_lteq, :class => "form-control", :placeholder => "Details less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :duration_cont, "Duration contains" %>
    <%= f.text_field :duration_cont, :class => "form-control", :placeholder => "Duration contains" %>
  </div>

  <div class="form-group">
    <%= f.label :year, "Year" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='yeargteqPicker' data-target-input="nearest">
          <%= f.text_field :year_gteq, :class => "form-control datetimepicker-input", :placeholder => "Year greater than or equal to", :data => {:target => '#yeargteqPicker'} %>
          <div class="input-group-append" data-target='#yeargteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='yearlteqPicker' data-target-input="nearest">
          <%= f.text_field :year_lteq, :class => "form-control datetimepicker-input", :placeholder => "Year less than or equal to", :data => {:target => '#yearlteqPicker'} %>
          <div class="input-group-append" data-target='#yearlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#yeargteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#yearlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#yeargteqPicker').on("dp.change", function (e) {
              $('#yearlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#yearlteqPicker').on("dp.change", function (e) {
              $('#yeargteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :director_date_of_birth_cont, "Director date_of_birth contains" %>
    <%= f.text_field :director_date_of_birth_cont, :class => "form-control", :placeholder => "Director date_of_birth contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Actor Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='cast_of_actorsgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :cast_of_actors_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Actor Created at greater than or equal to", :data => {:target => '#cast_of_actorsgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#cast_of_actorsgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='cast_of_actorslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :cast_of_actors_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Actor Created at less than or equal to", :data => {:target => '#cast_of_actorslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#cast_of_actorslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#cast_of_actorsgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#cast_of_actorslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#cast_of_actorsgteqcreated_atPicker').on("dp.change", function (e) {
              $('#cast_of_actorslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#cast_of_actorslteqcreated_atPicker').on("dp.change", function (e) {
              $('#cast_of_actorsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/movies" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#movies_filters">
  Show filters
</a>
